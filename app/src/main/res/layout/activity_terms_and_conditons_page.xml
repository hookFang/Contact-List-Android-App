<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermsAndConditionsPage">

    <include
        android:id="@+id/toolBarContact"
        layout="@layout/toolbar_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTintMode="src_in" />


    <TextView
        android:id="@+id/termsAndConditonsTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/termsValues"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationViewTermsPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBarContact" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationViewTermsPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/photoTint"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/account_page_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>