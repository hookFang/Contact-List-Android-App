<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1587F8"
    tools:context=".MainPageActivity">

    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="@string/appNameMainPage"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/addAndSearchLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/appNameTextView"
        android:layout_marginTop="20dp"
        android:gravity="right">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addContactFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/defaultMarginRightFabButton"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ic_baseline_add_24"
            android:scaleType="center"
            android:tint="#FFFFFF"
            app:maxImageSize="@dimen/defaultFabImageSize"
            app:backgroundTint="@color/photoTint" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/searchContactFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/defaultMarginRightFabButton"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ic_baseline_search_24"
            android:scaleType="center"
            android:tint="#FFFFFF"
            app:maxImageSize="@dimen/defaultFabImageSize"
            app:backgroundTint="@color/photoTint"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/menuContactFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/defaultMarginRightFabButton"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:scaleType="center"
            android:tint="#FFFFFF"
            app:maxImageSize="@dimen/defaultFabImageSize"
            app:backgroundTint="@color/photoTint" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contactRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addAndSearchLinearLayout"
        android:layout_marginTop="@dimen/contactRecyclerMarginTop"/>

</androidx.constraintlayout.widget.ConstraintLayout>