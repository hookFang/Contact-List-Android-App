<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hashmaps.contact_list_application_assignment">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/hashmaps_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/hashmaps_icon_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.hashmaps.contact_list_application_assignment.EditContact" />
        <activity android:name="com.hashmaps.contact_list_application_assignment.TermsAndConditionsPage" />
        <activity android:name="com.hashmaps.contact_list_application_assignment.AccountDetails" />
        <activity android:name="com.hashmaps.contact_list_application_assignment.ResetPassword" />
        <activity android:name="com.hashmaps.contact_list_application_assignment.ContactDetails" />
        <activity android:name="com.hashmaps.contact_list_application_assignment.AddContact" />
        <activity android:name="com.hashmaps.contact_list_application_assignment.MainPageActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name="com.hashmaps.contact_list_application_assignment.SignUpActivity" />
        <activity android:name="com.hashmaps.contact_list_application_assignment.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>